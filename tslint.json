{
    "extends": "tslint-config-standard",
    "rules": {
      "indent": [true, "spaces"],
      "ter-indent": [true, 4],
      "semicolon": [true, "always"],
      "no-unused-variable": true,
      "no-console": true,
      "no-empty": true,
      "no-invalid-this": true,
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }]
    }
  }