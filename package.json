{
  "name": "ethereal-editor",
  "version": "1.0.0",
  "description": "Ethereum blockchain editor",
  "main": "main.ts",
  "scripts": {
    "build:dev": "webpack --config webpack.config.js",
    "start": "electron ./dist/main.js",
    "build:test": "webpack --config webpack.tests.config.js",
    "test": "jest",
    "package-windows": "electron-packager . Ethereal --overwrite --asar --platform=win32 --arch=x64 --prune=true --out=release-builds",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-linux": "electron-packager . Ethereal --overwrite --asar --platform=linux --arch=x64 --prune=true --out=release-builds"
  },
  "keywords": [
    "Ethereum",
    "Ethereal",
    "Editor",
    "IDE",
    "Dev",
    "Develop",
    "React",
    "Webpack",
    "Typescript",
    "Jest"
  ],
  "author": "Shawn Choleva",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "electron-packager": "^10.1.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "jest-junit": "^3.4.0",
    "less-loader": "^4.0.5",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-fa": "^4.1.3",
    "@types/react-redux": "^5.0.14",
    "fs": "0.0.1-security",
    "less": "^2.7.3",
    "monaco-editor": "^0.10.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-fa": "^5.0.0",
    "react-monaco-editor": "^0.13.0",
    "react-redux": "^5.0.6",
    "redux": "^4.0.0-beta.1"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.jsx?",
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./TEST-jest_junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "usePathForSuiteName": "true"
  }
}
